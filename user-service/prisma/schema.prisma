generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id        Int      @id @default(autoincrement())
    username  String 
    email     String  @unique
    password  String 
    role      String  @default("user") 
    createdAt DateTime @default(now()) 
    updatedAt DateTime @updatedAt
}